<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="schoolplanner.csvWindow.ExportCSVController">
    <children>
        <Label text="Select a location to export the CSVs"/>
        <TextField fx:id="assignmentFilePathField" editable="false"/>
        <Button text="Browse and Export" onAction="#handleBrowseAndExport"/>

    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
